-- ver tabela inteira
SELECT * FROM produtos; 
SELECT * FROM categorias;

-- ver por colunas
SELECT id, nome FROM produtos;

-- filtrar o dado que irá vir
SELECT id,
nome
FROM produtos
WHERE
-- id = 1;
-- id < 10
-- id > 10;
-- id != 10; 
-- preco > 10 AND preco < 100
(preco > 10 && preco <= 50) OR preco = 50;

-- que contenha a palavra/ou inicie com uma letra
SELECT * FROM produtos WHERE nome LIKE "% para %" && "c%";

-- qualquer caracter absoluto _ p substituir palavra na busca
SELECT * FROM produtos WHERE nome LIKE "Ca__teira%";

-- busca especifica do valor informado usado operador IN
SELECT * FROM produtos WHERE id IN(10,4,16);

-- funciona melhor pra intervalo
SELECT * FROM produtos WHERE preco BETWEEN 100 AND 500;

-- Filtrando e ordenando na consulta - ASC e DESC
SELECT * FROM produtos WHERE preco BETWEEN 100 AND 500 
ORDER BY preco DESC
LIMIT 5; -- trazer x quantidade 
-- LIMIT 10,5 (PONTO INICIAL, QUANTIDADE QUE QUERO EXIBIR)

 SELECT 
count(preco) AS total, -- contar a quantidade de linhas não nulas na tabela, tipo length 
SUM(preco) AS soma, 
AVG(preco) AS media,
MIN(preco) AS minimo,
MAX(preco) AS maximo 
FROM produtos;

SELECT 
COUNT(*) AS total,
from_categorias,
categorias.titulo
FROM
produtos
INNER JOIN categorias ON categorias.id = produtos.from_categorias -- consulta 
GROUP BY from_categorias;
 
SELECT
categorias.titulo,
produtos.id,
produtos.nome,
produtos.preco
FROM 
produtos
INNER JOIN categorias ON produtos.from_categorias = categorias.id
ORDER BY categorias.titulo ASC;
